{
  "name": "backend-dev",
  "dockerComposeFile": ["../../docker-compose.dev.yml"],
  "service": "backend",
  "workspaceFolder": "/workspace",
  "forwardPorts": [8000],
  "runServices": ["backend", "db"],
  "overrideCommand": false,

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "prisma.prisma",
        "MS-CEINTL.vscode-language-pack-ja",
        "GitHub.copilot-chat",
        "usernamehw.errorlens",
        "streetsidesoftware.code-spell-checker",
        "ms-vscode-remote.remote-containers",
        "ms-vscode.makefile-tools"
      ],
      "settings": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.codeActionsOnSave": {
          "source.fixAll": "explicit",
          "source.fixAll.eslint": "explicit"
        },
        "eslint.validate": [
          "javascript",
          "javascriptreact",
          "typescript",
          "typescriptreact"
        ],
        "eslint.format": false,
        "[json]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true
        },
        "[markdown]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true
        },
        "errorLens.enabled": true,
        "errorLens.enabledDiagnosticLevels": [
          "error",
          "warning",
          "info",
          "hint"
        ],
        "workbench.colorCustomizations": {
          "activityBar.activeBackground": "#e0788d",
          "activityBar.background": "#e0788d",
          "activityBar.foreground": "#15202b",
          "activityBar.inactiveForeground": "#15202b99",
          "activityBarBadge.background": "#a7e797",
          "activityBarBadge.foreground": "#15202b",
          "commandCenter.border": "#e7e7e799",
          "sash.hoverBorder": "#e0788d",
          "statusBar.background": "#d64f6a",
          "statusBar.foreground": "#e7e7e7",
          "statusBarItem.hoverBackground": "#e0788d",
          "statusBarItem.remoteBackground": "#d64f6a",
          "statusBarItem.remoteForeground": "#e7e7e7",
          "titleBar.activeBackground": "#d64f6a",
          "titleBar.activeForeground": "#e7e7e7",
          "titleBar.inactiveBackground": "#d64f6a99",
          "titleBar.inactiveForeground": "#e7e7e799"
        }
      }
    }
  }
}
