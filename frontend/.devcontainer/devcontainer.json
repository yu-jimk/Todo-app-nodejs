{
  "name": "frontend-dev",
  "dockerComposeFile": ["../../docker-compose.dev.yml"],
  "service": "frontend",
  "workspaceFolder": "/workspace",
  "forwardPorts": [5173],
  "runServices": ["frontend"],

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "dsznajder.es7-react-js-snippets",
        "formulahendry.auto-close-tag",
        "formulahendry.auto-rename-tag",
        "usernamehw.errorlens",
        "ecmel.vscode-html-css",
        "xabikos.JavaScriptSnippets",
        "bradlc.vscode-tailwindcss",
        "redhat.vscode-yaml",
        "GitHub.copilot-chat",
        "MS-CEINTL.vscode-language-pack-ja",
        "streetsidesoftware.code-spell-checker",
        "ms-vscode-remote.remote-containers",
        "ms-vscode.makefile-tools"
      ],
      "settings": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.codeActionsOnSave": {
          "source.fixAll": "explicit",
          "source.fixAll.eslint": "explicit"
        },
        "eslint.validate": [
          "javascript",
          "javascriptreact",
          "typescript",
          "typescriptreact"
        ],
        "eslint.format": false,
        "[json]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true
        },
        "[markdown]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true
        },
        "errorLens.enabled": true,
        "errorLens.enabledDiagnosticLevels": [
          "error",
          "warning",
          "info",
          "hint"
        ],
        "workbench.colorCustomizations": {
          "activityBar.activeBackground": "#79d1e2",
          "activityBar.background": "#79d1e2",
          "activityBar.foreground": "#15202b",
          "activityBar.inactiveForeground": "#15202b99",
          "activityBarBadge.background": "#d748c0",
          "activityBarBadge.foreground": "#15202b",
          "commandCenter.border": "#15202b99",
          "sash.hoverBorder": "#79d1e2",
          "statusBar.background": "#4fc3d9",
          "statusBar.foreground": "#15202b",
          "statusBarItem.hoverBackground": "#2cb0c9",
          "statusBarItem.remoteBackground": "#4fc3d9",
          "statusBarItem.remoteForeground": "#15202b",
          "titleBar.activeBackground": "#4fc3d9",
          "titleBar.activeForeground": "#15202b",
          "titleBar.inactiveBackground": "#4fc3d999",
          "titleBar.inactiveForeground": "#15202b99"
        }
      }
    }
  }
}
